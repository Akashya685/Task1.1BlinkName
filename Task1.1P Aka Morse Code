//Akashya A.- K-.- A.- S... H.... Y-.-- A.- my name is morse code
void setup() {
  pinMode(LED_BUILTIN, OUTPUT);
}

void loop() {
  RelaxPoint();
  letterA(); // A .-
  letterK(); // K -.-
  letterA(); // A .-
  letterS(); // S ...
  letterH(); // H ....
  letterY(); // Y -.--
  letterA(); // A .-
}
